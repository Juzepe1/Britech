<odoo>
    <record id="view_ptp_unit_form" model="ir.ui.view">
        <field name="name">ptp.unit.form</field>
        <field name="model">ptp.unit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ptp_unit_tree" model="ir.ui.view">
        <field name="name">ptp.unit.tree</field>
        <field name="model">ptp.unit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_ptp_unit" name="Units" parent="base.menu_custom" sequence="10"/>
    <menuitem id="submenu_ptp_unit" name="Technical Units" parent="menu_ptp_unit" action="action_ptp_unit"/>
    
    <record id="action_ptp_unit" model="ir.actions.act_window">
        <field name="name">Technical Units</field>
        <field name="res_model">ptp.unit</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
